        <title>Calculadora das notas dos alunos</title>

    <script>

        const n1 = Number(prompt("Digite a nota do 1º Bimestre"))
        const n2 = Number(prompt("Digite a nota do 2º Bimestre"))
        const n3 = Number(prompt("Digite a nota do 3° Bimestre"))
        const n4 = Number(prompt("Digite a nota do 4° Bimestre"))

        const soma = n1 + n2 + n3 + n4 
        const media = soma / 4

        console.log("A média final é = " + media)

        if(media >= 6)(
            console.log("Parabéns você foi aprovado!")
        )   
        else {
            
            if(media < 3)
                console.log("Infelizmente você foi reprovado, estude mais")
            
            else(
             console.log("Recuperação. Estude mais para passar!")
                )
            

        }
        

    </script>
